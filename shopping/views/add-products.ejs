<%- include('layouts/header.ejs') %>


<%- include('layouts/navigator-admin.ejs') %>
<div class="jumbotron">
    <h5 class="display-3">Add Products!</h5> 
    <form action="/admin/add-products" method="POST">
        <div class="form-group">
          <label for="title">Product Title</label>
          <input type="text" class="form-control" name="title" placeholder="Enter Product Title" required>
          <small id="TitleHelp" class="form-text text-muted">add products title here</small>
        </div>
        <div class="form-group">
            <label for="title">Product image</label>
            <input type="text" class="form-control" name="imageUrl" placeholder="Enter image URL Title" required>
            <small id="imageURLHelp" class="form-text text-muted">add products image URL here</small>
          </div>
          <div class="form-group">
            <label class="control-label">Price</label>
            <div class="form-group">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">$</span>
                </div>
                <input name='price' type="number" class="form-control" aria-label="Amount (to the nearest dollar)" required>
                <div class="input-group-append">
                  <span class="input-group-text">.00</span>
                </div>
              </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
            
  </div>
</div>
</body>

<%- include('layouts/footer.ejs') %>

